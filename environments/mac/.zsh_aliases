# Modern Unix
alias ls='eza -lah'
alias bat='bat --paging=never'
alias date='gdate'
alias df='duf'
alias find='fd'
alias top='gtop'
alias htop='gtop'
alias ping='gping'
alias ps='procs'
alias dig='q'
alias xargs='gxargs'
alias cz='chezmoi'
# Git
alias gp='git push'
alias gpu='git pull --rebase --autostash'
alias gpf='git push --force-with-lease'
alias gsm='git stash > /dev/null && (git switch -q master 2> /dev/null || git switch -q main)'
alias gsmp='gsm && gpu'
