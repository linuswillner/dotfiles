# ZSH home
export ZSH="$HOME/.oh-my-zsh"

# Homebrew
export PATH="/opt/homebrew/bin:/opt/homebrew/opt/make/libexec/gnubin:/opt/homebrew/opt/libpq/bin:${PATH}"

# Ensure 256-color mode
export TERM="xterm-256color"

# Set editor to nano
export EDITOR='nano'

# GPG TTY
export GPG_TTY=$(tty)

# Send SSH auth to Secretive
export SSH_AUTH_SOCK=/Users/linusw/Library/Containers/com.maxgoedjen.Secretive.SecretAgent/Data/socket.ssh

# AWS Vault
export AWS_VAULT_PROMPT=terminal
